{
  "name": "consulting-platform",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "turbo dev --filter=web",
    "dev:all": "turbo dev",
    "build": "turbo build",
    "build:web": "turbo build --filter=web",
    "build:ai": "turbo build --filter=@consulting-platform/ai",
    "build:worker": "turbo build --filter=worker",
    "start": "turbo start --filter=web",
    "worker:start": "turbo start --filter=worker",
    "lint": "turbo lint",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "type-check": "turbo type-check",
    "db:push": "turbo db:push",
    "db:migrate": "turbo db:migrate",
    "db:studio": "turbo db:studio",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "test:ci": "turbo test --coverage",
    "deploy": "railway up",
    "clean": "turbo clean",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "security:audit": "audit-ci --config audit-ci.json",
    "security:check": "pnpm audit --audit-level moderate",
    "validate": "pnpm type-check && pnpm lint && pnpm security:audit && pnpm test"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.4.0",
    "audit-ci": "^7.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "pg": "^8.16.3",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@9.14.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "biome check --write",
      "biome format --write"
    ],
    "package.json": [
      "pnpm security:audit"
    ]
  }
}
