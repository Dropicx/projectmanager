#!/usr/bin/env sh

echo "üîç Running pre-commit checks..."

# Run lint-staged (formatting and linting)
pnpm pre-commit

# Run security audit (optional, continue on failure)
echo "üîí Running security audit..."
pnpm security:audit || echo "‚ö†Ô∏è  Security audit had warnings but continuing..."

# Type checking is optional - just show warnings
echo "üìù Running type checks (optional)..."
pnpm type-check 2>/dev/null || echo "‚ö†Ô∏è  Type checking has errors - consider fixing them"

echo "‚úÖ Pre-commit checks completed!"
