{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "CommonJS",
    "moduleResolution": "node"
  },
  "include": [
    "*.ts",
    "bedrock/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test-*.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
