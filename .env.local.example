# ============================================
# Docker Compose Environment Variables
# ============================================
# Copy this file to .env.local and fill in your actual values
# cp .env.local.example .env.local

# ============================================
# Database (Auto-configured in Docker Compose)
# ============================================
# These are set automatically by docker-compose.yml
# DATABASE_URL=postgresql://consulting:consulting_dev_pass@postgres:5432/consulting_platform
# REDIS_URL=redis://redis:6379

# ============================================
# Authentication - Clerk (REQUIRED)
# ============================================
# Get these from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_secret_here

# Clerk URLs (Optional - defaults are set)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ============================================
# AWS Bedrock - AI Features (REQUIRED)
# ============================================
# AWS Region
AWS_REGION=eu-central-1

# Option 1: Bedrock API Key method (matches Railway production)
BEDROCK_API_KEY=your_bedrock_api_key
BEDROCK_API_KEY_ID=your_bedrock_key_id
BEDROCK_API_KEY_SECRET=your_bedrock_key_secret

# Option 2: Standard AWS IAM credentials (alternative)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Budget Control (Optional - for cost management)
BEDROCK_FREE_TIER_BUDGET_USD=10
BEDROCK_PRO_TIER_BUDGET_USD=50
BEDROCK_ENTERPRISE_BUDGET_USD=200
BEDROCK_DAILY_LIMIT_USD=20
BEDROCK_MONTHLY_BUDGET_USD=500

# ============================================
# Optional: Alternative AI Providers
# ============================================
# OpenAI API (alternative to AWS Bedrock)
# OPENAI_API_KEY=sk-your_openai_key

# Mistral AI API (alternative to AWS Bedrock)
# MISTRAL_API_KEY=your_mistral_key

# ============================================
# Worker Service Configuration (Optional)
# ============================================
# Worker concurrency settings (defaults are set in code if not provided)
# WORKER_CONCURRENCY=5
# MAX_RETRIES=3
# JOB_TIMEOUT_MS=300000

# Logging level for worker service
# LOG_LEVEL=info

# ============================================
# Optional: Monitoring & Analytics
# ============================================
# Sentry for error tracking
SENTRY_DSN=

# Langfuse for AI observability
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_BASE_URL=https://cloud.langfuse.com

# ============================================
# Optional: Feature Flags
# ============================================
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_KNOWLEDGE_BASE=true
